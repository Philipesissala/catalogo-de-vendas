{% block content %}
    <div class="wrapper">
        <h2>Produtos</h2>
        <div class="cards">
            {% for data in datas %}
                <div class="card">
                    <div class="card_image">
                        <img src="{{ data.imagem }}" alt=""></div>
                        <div class="card_body">
                            <h3>{{ data.designacao }}</h3>
                            <div class="card__info">
                                <p class="price">
                                    <span class="before">
                                        <b>Antes:</b>
                                        <s>{{ data.antigo }}Kzs</s>
                                    </span>
                                    <span class="now">
                                        <b>Agora:</b>
                                        {{ data.novo }}Kzs</span>
                                </p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endblock %}